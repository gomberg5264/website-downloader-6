{
  "manifest_version": 2,

  "name": "Downloader",
  "description": "This extension downloads everything on the current page",
  "version": "0.1",

   "permissions": [
        "webRequest",
        "browsingData",
        "http://*/*",
        "https://*/*",
        "background",
        "windows",
        "tabs",
        "downloads",
        "webRequestBlocking"
   ],

    "browser_action": {
        "default_icon": "downloader_icon.png",
        "default_popup": "popup.html"
    },
    
    "background" :{
      "scripts": ["background.js"]
  }

}